{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for Remember app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",

    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",

    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "$HOME/**" }]
    },

    "opener:default",

    "dialog:default",
    "dialog:allow-open"
  ]
}
